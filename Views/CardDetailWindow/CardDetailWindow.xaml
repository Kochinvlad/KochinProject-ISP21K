<Window x:Class="KochinProject_ISP21K.Views.CardDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KochinProject_ISP21K.Views"
        mc:Ignorable="d"
        Title="Card Details" Height="580" Width="1010">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding CardNumber}" FontSize="20"/>
            <TextBlock Text="{Binding Service}" FontSize="16"/>
            <TextBlock Text="{Binding Date}" FontSize="16"/>
            <TextBlock Text="{Binding EndDate}" FontSize="16"/>
            <Button Content="Close" Click="CloseButton_Click" Background="LightGray" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>

