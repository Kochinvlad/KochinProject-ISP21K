<Window x:Class="KochinProject_ISP21K.Views.AddEditScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KochinProject_ISP21K.Views"
        mc:Ignorable="d"
        Title="Add/Edit Schedule" Height="580" Width="1010">
    <Grid>
        <StackPanel>
            <TextBox x:Name="ActivityTextBox" Text="Activity" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="RoomTextBox" Text="Room" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="EmployeeTextBox" Text="Employee" GotFocus="RemoveText" LostFocus="AddText"/>
            <DatePicker x:Name="StartDatePicker" />
            <Button Content="Save" Click="SaveButton_Click" Background="LightCoral" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>

