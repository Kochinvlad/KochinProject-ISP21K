<Window x:Class="KochinProject_ISP21K.Views.ScheduleDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KochinProject_ISP21K.Views"
        mc:Ignorable="d"
        Title="Schedule Details" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Activity}" FontSize="20"/>
            <TextBlock Text="{Binding Room}" FontSize="16"/>
            <TextBlock Text="{Binding Employee}" FontSize="16"/>
            <TextBlock Text="{Binding StartDate}" FontSize="16"/>
            <Button Content="Close" Click="CloseButton_Click" Background="LightGray" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
