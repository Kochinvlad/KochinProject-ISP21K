<Window x:Class="KochinProject_ISP21K.Views.AddEditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KochinProject_ISP21K.Views"
        mc:Ignorable="d"
        Title="Add/Edit Card" Height="580" Width="1010">
    <Grid>
        <StackPanel>
            <TextBox x:Name="CardNumberTextBox" Text="Card Number" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="ServiceTextBox" Text="Service" GotFocus="RemoveText" LostFocus="AddText"/>
            <DatePicker x:Name="DateDatePicker" />
            <DatePicker x:Name="EndDateDatePicker" />
            <Button Content="Save" Click="SaveButton_Click" Background="LightBlue" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>

